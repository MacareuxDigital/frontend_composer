<?xml version="1.0" encoding="UTF-8"?>
<schema
        xmlns="http://www.concrete5.org/doctrine-xml/0.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
    <table name="btAddEditPageButton">
        <field name="bID" type="integer">
            <unsigned/>
            <key/>
        </field>
        <field name="type" type="string" size="255" comment="was enum('add','edit')">
            <default value="add"/>
        </field>
        <field name="ptID" type="integer">
            <unsigned/>
            <default value="0"/>
            <notnull/>
        </field>
        <field name="tcID" type="integer">
            <unsigned/>
            <default value="0"/>
            <notnull/>
        </field>
    </table>
</schema>
